<form class="">
  <div class="uk-child-width-expand uk-grid">
    {{#each this.selectors as |selector|}}
      <CaFieldSelectorField @selector={{selector}} @onSelect={{this.select}}/>
    {{/each}}
  </div>

  <div class="uk-grid">
    <label class="cf-checkbox_label {{if @field.isInvalid "uk-form-danger"}}">
      <input
        class="uk-checkbox uk-margin-small-right"
        type="checkbox"
        name="show-in-output"
        value={{this.showInOutput}}
        checked={{this.showInOutput}}
        {{on "change" this.setShowInOutput}}
      />
      Show in output
    </label>

    <input
      type="text"
      class="uk-input uk-child-width-expand"
      name="'alias'"
      id="'alias'"
      value={{this.alias}}
      placeholder="alias"
    />
  </div>
</form>
{{yield}}